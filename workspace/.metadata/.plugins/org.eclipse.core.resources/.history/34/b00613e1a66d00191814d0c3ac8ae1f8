	@Override
	public List<GameMove> getMoves() {
		List<GameMove> moves = new ArrayList<GameMove>();		
		GameMove move;
		int target;
		
		move = new GameMove(0, getTeam() ? -1 : 1); 
		target = getPieceRelativeTo(move);
		if (target == -1) {
			moves.add(move);
			move = new GameMove(0, getTeam() ? -2 : 2);
			target = getPieceRelativeTo(move);
			if (target == -1 && getY() == (getTeam() ? 6 : 1))
				moves.add(move);
		}
		
		move = new GameMove(-1, getTeam() ? -1 : 1);
		target = getPieceRelativeTo(move);
		if (target != -1 && board.pieces[target].getTeam() != getTeam())
			moves.add(move);
		
		move = new GameMove(1, getTeam() ? -1 : 1);
		target = getPieceRelativeTo(move);
		if (target != -1 && board.pieces[target].getTeam() != getTeam())
		moves.add(move);
		
		move = new GameMove(-1, getTeam() ? -1 : 1);
		target = getPieceFromPos(getX() - 1, getY());
		if (target != -1 && board.pieces[target].getTeam() != getTeam() && board.pieces[target].isLastMoved() && board.pieces[target] instanceof Pawn) {
			move.specialTarget = board.pieces[target];
			moves.add(move);
		}
		
		move = new GameMove(1, getTeam() ? -1 : 1);
		target = getPieceFromPos(getX() + 1, getY());
		if (target != -1 && board.pieces[target].getTeam() != getTeam() && board.pieces[target].getMoved() == 1 && board.pieces[target].isLastMoved() && pieces[target] instanceof Pawn) {
			move.specialTarget = board.pieces[target];
			moves.add(move);
		}
		
		return moves;
	}

	@Override
	public String getChar() {
		return getTeam() ? "\u265f" : "\u2659";
	}

}
